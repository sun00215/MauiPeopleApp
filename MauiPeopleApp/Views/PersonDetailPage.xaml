<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPeopleApp.Views.PersonDetailPage"
             Title="Person Details">
    <StackLayout Padding="20" Spacing="20">
        <Frame CornerRadius="60" WidthRequest="120" HeightRequest="120" Padding="0" IsClippedToBounds="True" HorizontalOptions="Center">
            <Image Source="{Binding Person.Avatar}" Aspect="AspectFill" />
        </Frame>
        <Label Text="{Binding Person.FullName}" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center"/>
        <Label Text="{Binding Person.Email}" FontSize="16" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>